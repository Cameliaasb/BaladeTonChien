<div class="app-container" >

  <div class="show-container">
    <%= link_to(:back, class:"text-decoration-none return-btn") do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>

    <div class="showmap"
      data-controller="map"
      data-map-target="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-type-value="<%= @walk_geometry["type"] %>"
      data-map-coordinates-value="<%= @walk_geometry["coordinates"] %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>">
    </div>

    <div class ="walk-card">

      <h2><%= @walk.title%></h2>
      <div class="walk-infos">
        <p> <strong> <i class="fa-solid fa-location-dot" ></i> </strong> <%= @walk.city %></p>
        <p> <strong> <i class="fa-solid fa-arrow-trend-up" ></i></strong> <%= @walk.difficulty.capitalize %></p>
      </div>
      <div class="walk-infos">
        <p> <strong> <i class="fa-regular fa-map" ></i> </strong> <%= @walk.distance %> km</p>
        <p><strong> <i class="fa-regular fa-clock"></i></strong> <%= @walk.duration >= 60 ? Time.at(@walk.duration * 60).utc.strftime("%Hh%M") : Time.at(@walk.duration * 60).utc.strftime("%Mmin")  %></p>
      </div>
        <p class="walk-description"><%=@walk.description %></p>

    </div>

  </div>

</div>
<%= render "shared/footer" %>
